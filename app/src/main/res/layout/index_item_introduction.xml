<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_maximum"
    card_view:cardElevation="@dimen/card_elevation">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/chapter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_maximum"
        android:textSize="@dimen/font_size_small"
        android:text="Introduction"/>

    <TextView
        android:id="@+id/chapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/chapter_title"
        android:layout_marginBottom="@dimen/margin_default"
        android:textSize="@dimen/font_size_xl"
        android:text="sdfdsfdsgdg"/>

    <ImageView
        android:id="@+id/chapter_image"
        android:layout_width="240dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/chapter_name"
         />



</RelativeLayout>
</android.support.v7.widget.CardView>