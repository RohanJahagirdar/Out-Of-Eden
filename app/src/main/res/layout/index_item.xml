<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_maximum"
    android:layout_marginRight="@dimen/margin_maximum"
    android:layout_marginTop="@dimen/margin_default"
    android:layout_marginBottom="@dimen/margin_default"
    card_view:cardElevation="@dimen/card_elevation">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/chapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_maximum"
        android:textSize="@dimen/font_size_small"
        android:text="Introduction"/>

    <TextView
        android:id="@+id/chapter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/chapter_name"
        android:layout_marginBottom="@dimen/margin_maximum"
        android:textSize="@dimen/font_size_xl"
        android:text="sdfdsfdsgdg"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/chapter_title"
        android:layout_alignLeft="@id/chapter_name"
        android:id="@+id/chapter_image"/>



    <TextView
        android:id="@+id/chapter_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chapter_date"
        android:maxLines="3"
        android:ellipsize="end"
        android:minLines="3"
        android:layout_toRightOf="@id/chapter_image"
        android:layout_alignTop="@id/chapter_image"
        android:layout_marginLeft="@dimen/margin_maximum"
        android:layout_marginRight="@dimen/margin_maximum"
        android:layout_marginBottom="@dimen/margin_minimum"
        android:textSize="@dimen/font_size_l"/>

    <TextView
        android:id="@+id/chapter_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/chapter_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_maximum"
        android:paddingRight="@dimen/margin_maximum"
        android:textSize="@dimen/font_size_big"/>


</RelativeLayout>
</android.support.v7.widget.CardView>